<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Dont_Update_Appt_and_Arrival_Time</fullName>
    <active>true</active>
    <errorConditionFormula>ISCHANGED(EarliestStartTime) || ISCHANGED(DueDate)</errorConditionFormula>
    <errorMessage>You are not allowed to update Appt Time or  Arrival time.</errorMessage>
</ValidationRule>
